<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_basic_select"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:title="Basic Topics"
    tools:context="com.project.one.team.musictheoryapp.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="insideInset"
        android:fillViewport="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/selectLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="1"
                android:id="@+id/introLayout"
                android:layout_height="152dp">

                <ImageButton
                    android:layout_width="128dp"
                    app:srcCompat="@drawable/introbtn"
                    android:id="@+id/introBtn"
                    android:scaleType="fitXY"
                    android:background="@android:color/transparent"
                    android:layout_height="128dp"
                    android:cropToPadding="false"
                    android:layout_marginTop="12dp" />

                <TextView
                    android:text="Introduction to Music Theory"
                    android:layout_width="wrap_content"
                    android:id="@+id/introTxt"
                    android:textSize="22sp"
                    android:textAlignment="center"
                    android:layout_height="128dp"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="12dp" />


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="1"
                android:layout_height="152dp"
                android:id="@+id/mnotesLayout">

                <ImageButton
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    app:srcCompat="@drawable/mnotesbtn"
                    android:id="@+id/mnotesbtn"
                    android:layout_weight="0.00"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:layout_marginTop="12dp" />

                <TextView
                    android:text="Musical Notes"
                    android:layout_width="match_parent"
                    android:id="@+id/mnotesTxt"
                    android:layout_height="128dp"
                    android:textSize="22sp"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:layout_marginTop="12dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.00"
                android:id="@+id/smpnotelenLayout">

                <TextView
                    android:text="Simple Note Lengths"
                    android:layout_width="wrap_content"
                    android:layout_height="128dp"
                    android:id="@+id/smpnotelenTxt"
                    android:layout_weight="1"
                    android:textSize="22sp"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:layout_marginTop="12dp" />

                <ImageButton
                    app:srcCompat="@drawable/smpnotelenbtn"
                    android:id="@+id/smpnotelenBtn"
                    android:scaleType="fitXY"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:background="@android:color/transparent"
                    android:layout_marginTop="12dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="152dp"
                android:id="@+id/advnotelenLayout">

                <TextView
                    android:text="Advanced Note Lengths"
                    android:layout_width="0dp"
                    android:layout_height="128dp"
                    android:id="@+id/advnotelenTxt"
                    android:layout_weight="1"
                    android:textSize="22sp"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:layout_marginTop="12dp" />

                <ImageButton
                    android:layout_height="128dp"
                    app:srcCompat="@drawable/advnotelenbtn"
                    android:id="@+id/advnotelenBtn"
                    android:scaleType="fitXY"
                    android:background="@android:color/transparent"
                    android:layout_width="128dp"
                    android:layout_marginTop="12dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
