<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backButton" />

        <Button
            android:text="Settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/quizSettingsButton"
            android:layout_row="0"
            android:layout_column="18" />

    </GridLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:id="@+id/questionText"
            android:textSize="22sp"
            android:textColor="@android:color/black" />

        <TextView
            android:text="Answer 1"
            android:layout_width="wrap_content"
            android:layout_marginTop="80dp"
            android:id="@+id/answer1Text"
            android:background="@drawable/border"
            android:layout_below="@+id/questionText"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:clickable="false" />

        <TextView
            android:text="Answer 2"
            android:layout_width="wrap_content"
            android:layout_below="@+id/answer1Text"
            android:layout_alignLeft="@+id/answer1Text"
            android:layout_alignStart="@+id/answer1Text"
            android:layout_marginTop="10dp"
            android:id="@+id/answer2Text"
            android:background="@drawable/border"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginRight="10dp" />

        <TextView
            android:text="Answer 3"
            android:layout_width="wrap_content"
            android:layout_below="@+id/answer2Text"
            android:layout_marginTop="10dp"
            android:id="@+id/answer3Text"
            android:layout_alignLeft="@+id/answer2Text"
            android:layout_alignStart="@+id/answer2Text"
            android:background="@drawable/border"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginRight="10dp" />

        <TextView
            android:text="Answer 4"
            android:layout_width="wrap_content"
            android:layout_below="@+id/answer3Text"
            android:layout_marginTop="10dp"
            android:id="@+id/answer4Text"
            android:layout_alignLeft="@+id/answer3Text"
            android:background="@drawable/border"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginRight="10dp" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/progressBar"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:progress="90" />

    </RelativeLayout>

</LinearLayout>