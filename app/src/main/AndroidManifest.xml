<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.one.team.musictheoryapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainPageActivity">

            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.project.one.team.musictheoryapp.MAINACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>

        <activity
            android:name=".QuizActivity"
            android:label="@string/title_activity_quiz"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait" />

        <activity android:name=".SettingsActivity"></activity>
        <activity android:name=".BasicSelectActivity"></activity>
        <activity android:name=".BasicSelectActivityV2"></activity>
        <activity android:name=".ContentActivity"></activity>
        <activity android:name=".CreditsActivity"></activity>
    </application>

</manifest>